# Handle Observations
        if observation_form.validate_on_submit():
            new_observation = Observation(
                patient_id=patient.id,
                visit_id=new_visit.id,
                code=observation_form.code.data,
                value=observation_form.value.data,
                status=observation_form.status.data,
            )
            db.session.add(new_observation)

        # Handle Medications
        if medication_statement_form.validate_on_submit():
            # Create a MedicationStatement
            new_statement = MedicationStatement(
                patient_id=patient.id,
                visit_id=new_visit.id,
                medication = medication_statement_form.medication.data,
                dosage = medication_statement_form.dosage.data, 
                status=medication_statement_form.status.data,
                effectivePeriod_start=medication_statement_form.effectivePeriod_start.data,
                effectivePeriod_end=medication_statement_form.effectivePeriod_end.data
            )


<!-- Observation Section -->
        <h4>Observations</h4>
        {{ observation_form.hidden_tag() }}
        <div class="mb-3">
            {{ observation_form.code.label(class="form-label") }}
            {{ observation_form.code(class="form-control") }}
            {% for error in observation_form.code.errors %}
                <div class="text-danger">{{ error }}</div>
            {% endfor %}
        </div>
        <div class="mb-3">
            {{ observation_form.value.label(class="form-label") }}
            {{ observation_form.value(class="form-control") }}
            {% for error in observation_form.value.errors %}
                <div class="text-danger">{{ error }}</div>
            {% endfor %}
        </div>
        <div class="mb-3">
            {{ observation_form.status.label(class="form-label") }}
            {{ observation_form.status(class="form-select") }}
            {% for error in observation_form.status.errors %}
                <div class="text-danger">{{ error }}</div>
            {% endfor %}
        </div>
        <div class="mb-3">
            {{ observation_form.effectiveDateTime.label(class="form-label") }}
            {{ observation_form.effectiveDateTime(class="form-control") }}
            {% for error in observation_form.effectiveDateTime.errors %}
                <div class="text-danger">{{ error }}</div>
            {% endfor %}
        </div>

        <hr>

        <!-- Medication Section -->
        <h4>Medications</h4>
        {{ medication_statement_form.hidden_tag() }}
        <div class="mb-3">
            {{ medication_statement_form.medication.label(class="form-label") }}
            {{ medication_statement_form.medication(class="form-select") }}
